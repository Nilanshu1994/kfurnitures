<% include partials/header %>


<div class="container">
	<div style = "display:none">
		<div class="alert alert-success alert-dismissible" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<h5></h5>
		</div>
	</div>
	<div style = "display:none">
		<div class="alert alert-danger alert-dismissible" role="alert">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<h5></h5>
		</div>
	</div>
	
</div>

<div class="container" id="abc">
	<div class="well well-sm">
	<div class="page-header">
		<h1 class="text-center"><%= currentuser.username %>'s Cart</h1>
	</div>
	</div>
  <% if(carts.length!=0){ %>
	<% carts.forEach(function(items){ %>
	    <div class="row">
			<div class="col-sm-4">
				<a href="/<%=items.furid.category%>/<%=items.furid._id%>"><img src="<%= items.furid.file %>" alt="image"></a>
			</div>
			<div class="col-sm-8">
				<div class="jumbotron">
					<p><%= items.furid.details %></p>
		           	<h3 class="pull-right">â‚¹ <%= items.furid.price %></h3>
		        	<h5>Completion Time: <%= items.furid.ctime %></h5>
		        	<form action="/cart/<%= items._id %>?_method=delete" method="post">
		             <button type="submit" class="btn btn-danger">Remove</button>
		        	</form>
				</div>	     
			</div>
		</div>
	<% }) }else{%>
	<h1>You have Not added anything to the cart</h1>
	<% } %>
</div>

<% include partials/footer %>