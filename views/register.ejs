<!DOCTYPE html>
<html>
<head>
	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/edit.css">
	
</head>
<body class="bodybackground">

 <ul class="nav nav-tabs nav-justified" role="tablist">
    <li role="presentation" class="active"><a href="#login" aria-controls="login" role="tab" data-toggle="tab">LOGIN</a></li>
    <li role="presentation"><a href="#register" aria-controls="register" role="tab" data-toggle="tab">Register</a></li>
 </ul>

<div class="container">
				<% if(success && success.length > 0){ %>
				<div class="alert alert-success alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				       <h5><%= success %></h5>
				</div>
				<% } if(error && error.length > 0) { %>
				<div class="alert alert-danger alert-dismissible" role="alert">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				      <h5><%= error %></h5>
				</div>
				<% } %>
		    </div>


	<div class="tab-content">
		<!-- login -->
		<div role="tabpanel" class="tab-pane active" id="login">
			<div class="container">
				<div class="jumbotron">

				    <div style="width: 30%; margin: 25px auto;">
	 	                <form action="/login" method="post"> 
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input id="username" type="text" class="form-control" name="username">      	
                            </div>    
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input id="password" type="password" class="form-control" name="password">      	
                            </div>  
                            <button type="submit" class="btn btn-primary">Login</button>       
					    </form> 
					</div>
				</div>
			</div>
			
		</div>

        <!-- Register -->
        <div role="tabpanel" class="tab-pane" id="register">

			<div class="container">
				<div class="jumbotron">
				    <div style="width: 30%; margin: 25px auto;">
	 	                <form action="/register" method="post"> 	 	                         	
                            <div class="form-group">
                                <label for="username">Username:</label>
                                <input id="username" type="text" class="form-control" name="username">      	
                            </div>    
                            <div class="form-group">
                                <label for="password">Password:</label>
                                <input id="password" type="password" class="form-control" name="password">      	
                            </div> 
                            <div class="form-group">
                                <label for="address">Address:</label>
                                <textarea id="address" class="form-control" name="address">Enter your Address</textarea>
                            </div> 
                            <button type="submit" class="btn btn-primary">Register</button>             
					    </form> 
					</div>
				</div>
			</div>
		
		</div>	
	</div>
	<script src="/jq/jquery.js" type="text/javascript"></script>
	<script src="/jq/bootstrap.min.js" type="text/javascript"></script>
</body>
</html>